<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="40dp"
    >

    <Button
        android:id="@+id/selectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:text="Select File"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_above="@id/uploadHistory"/>

    <Button
        android:id="@+id/uploadHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Treatment History"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_above="@id/uploadXray"


        />

    <Button
        android:id="@+id/uploadXray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload X-ray Image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_above="@id/downloadReport"

        />

    <Button
        android:id="@+id/downloadReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Doctor Report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        />

    <Button
        android:id="@+id/downloadXray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below ="@id/downloadReport"
        android:text="Download X-ray Image"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_centerHorizontal="true"

        />

    <Button
        android:id="@+id/downloadHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below ="@id/downloadXray"
        android:text="Download Treatment History"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_centerHorizontal="true"

        />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_above="@+id/selectBtn"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccent" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/homebtn"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent" />

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorAccent"
        android:layout_above="@id/textView"/>

    <Button
        android:id="@+id/homebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_menu"
        android:layout_below ="@id/downloadHistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/divider3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimary"
        android:text="Patient Records"
        android:textSize="40sp"
        />


</RelativeLayout>