<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".see_eversmile">

    <TextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_takepicture"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_takepicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="19dp"
        android:text="@string/take_face" />

    <Button
        android:id="@+id/btn_leftpicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/btn_takepicture"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="19dp"
        android:text="@string/take_left" />

    <Button
        android:id="@+id/btn_rightpicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btn_takepicture"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="19dp"
        android:text="@string/take_right" />

    <Button
        android:id="@+id/btn_viewpics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_takepicture"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal ="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="68dp"
        android:text="@string/view_pics" />
</RelativeLayout>